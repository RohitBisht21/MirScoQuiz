<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.MirScoQuiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizoholic">
        <activity android:name="com.example.MirScoQuiz.ResultActivity"
            android:theme="@style/CustomNoActionBarTheme"/>
        <activity
            android:name="com.example.MirScoQuiz.QuestionsActivity"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.example.MirScoQuiz.UserProfile"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity android:name="com.example.MirScoQuiz.MainActivity" />
        <activity
            android:name="com.example.MirScoQuiz.SignUpActivity"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.example.MirScoQuiz.SignInActivity"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.example.MirScoQuiz.SplashScreen" android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>